[Unit]
Description=Rathole Service
After=network.target

[Service]
Type=simple
Restart=on-failure
RestartSec=5s
LimitNOFILE=1048576

# with root
ExecStart=/usr/local/bin/rathole /home/pi/rathole/server.toml
# without root
# ExecStart=%h/.local/bin/rathole %h/.local/etc/rathole/%i.toml

[Install]
WantedBy=multi-user.target
